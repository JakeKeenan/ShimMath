@model ShimMathAdmin.Models.CodeSpaceModels.CodeSpaceModel

@{
    ViewData["Title"] = "CodeSpaceUpdates";
}

<div class="outer">
    <div class="inner">

        <div class="card bg-dark update-card" id="NewUpdateOption">
            <div class="card-header text-light">
                <h5 class="d-inline-block">New Update</h5>
                <div>
                    <div class="text-light pointer float-right d-inline-block w-auto h-auto ml-1" onclick="createUpdate('NewUpdateOption', 'NewUpdateLocation')">
                        <svg class="bi bi-pencil-square" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor">
                            <path d="M15.502 1.94a.5.5 0 010 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 01.707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 00-.121.196l-.805 2.414a.25.25 0 00.316.316l2.414-.805a.5.5 0 00.196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 002.5 15h11a1.5 1.5 0 001.5-1.5v-6a.5.5 0 00-1 0v6a.5.5 0 01-.5.5h-11a.5.5 0 01-.5-.5v-11a.5.5 0 01.5-.5H9a.5.5 0 000-1H2.5A1.5 1.5 0 001 2.5v11z" clip-rule="evenodd" />
                        </svg>
                    </div>
                </div>
            </div>
        </div>

        <div class="card bg-dark update-card mt-3" id="Update0.0.0">
            <div class="card-header text-light">
                <h5 class="d-inline-block card-header-text">4/20/2020</h5>

                <div id="deleteUpdateOption" class="text-light pointer float-right d-inline-block ml-1" onclick="deleteUpdate()">
                    <svg class="bi bi-trash" width="0.9em" height="1em" viewBox="0 0 16 16" fill="currentColor">
                        <path d="M5.5 5.5A.5.5 0 016 6v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm2.5 0a.5.5 0 01.5.5v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm3 .5a.5.5 0 00-1 0v6a.5.5 0 001 0V6z" />
                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 01-1 1H13v9a2 2 0 01-2 2H5a2 2 0 01-2-2V4h-.5a1 1 0 01-1-1V2a1 1 0 011-1H6a1 1 0 011-1h2a1 1 0 011 1h3.5a1 1 0 011 1v1zM4.118 4L4 4.059V13a1 1 0 001 1h6a1 1 0 001-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="edit-update-option text-light pointer float-right" style="display: inline-block">
                    <svg class="bi bi-pencil" width="0.9em" height="1em" viewBox="0 0 16 16" fill="currentColor" style="margin-left: 10px;">

                        <path fill-rule="evenodd" d="M11.293 1.293a1 1 0 011.414 0l2 2a1 1 0 010 1.414l-9 9a1 1 0 01-.39.242l-3 1a1 1 0 01-1.266-1.265l1-3a1 1 0 01.242-.391l9-9zM12 2l2 2-9 9-3 1 1-3 9-9z" clip-rule="evenodd" />
                        <path fill-rule="evenodd" d="M12.146 6.354l-2.5-2.5.708-.708 2.5 2.5-.707.708zM3 10v.5a.5.5 0 00.5.5H4v.5a.5.5 0 00.5.5H5v.5a.5.5 0 00.5.5H6v-1.5a.5.5 0 00-.5-.5H5v-.5a.5.5 0 00-.5-.5H3z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="edit-update-exit-options float-right" style="display: none">

                    <div class="edit-update-save-option text-light pointer float-right d-inline-block">
                        <svg class="bi bi-x" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor">
                            <path fill-rule="evenodd" d="M11.854 4.146a.5.5 0 010 .708l-7 7a.5.5 0 01-.708-.708l7-7a.5.5 0 01.708 0z" clip-rule="evenodd" />
                            <path fill-rule="evenodd" d="M4.146 4.146a.5.5 0 000 .708l7 7a.5.5 0 00.708-.708l-7-7a.5.5 0 00-.708 0z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="edit-update-discard-option text-light pointer float-right d-inline-block">
                        <svg class="bi bi-check" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor">
                            <path fill-rule="evenodd" d="M13.854 3.646a.5.5 0 010 .708l-7 7a.5.5 0 01-.708 0l-3.5-3.5a.5.5 0 11.708-.708L6.5 10.293l6.646-6.647a.5.5 0 01.708 0z" clip-rule="evenodd" />
                        </svg>
                    </div>

                </div>


            </div>
            <div class="card-body">
                <h5 class="card-title text-light">Update 0.0.0</h5>
                <h6 class="card-subtitle mb-2 text-muted">The Updates Update</h6>
                <p class="card-text text-light">Yay, we can now post updates, and a general layout for the website has been decided on.</p>
            </div>
        </div>

    </div>
</div>

<script src="~/js/code-space-update.js"></script>
