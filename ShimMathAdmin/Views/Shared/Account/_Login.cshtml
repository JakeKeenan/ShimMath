<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content bg-dark text-light">
            <div class="d-flex">
                <div class="login-background">

                </div>
                <div class="login-main">
                    <div class="mt-5 mb-5 ml-5 d-flex flex-column flex-grow-1">
                        <h1 class="modal-title flex-shrink-1 mb-1">&#8747;himM&Delta;th</h1>

                        <form class="ml-3 d-flex flex-column justify-content-around flex-grow-1">
                            <div class="form-group">
                                <label>User Name or Email</label>
                                <input id="usernameOrEmailSignIn" type="password" class="form-control" placeholder="User Name or Email">
