@model ShimMathAdmin.Models.AdminModels.LayoutModel;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShimMathAdmin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <header>
        <!--<div class="container">-->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark rounded d-flex p-2">
            <div class="container">
                <a class="navbar-brand" href="#">&#8747;himM&Delta;th</a>
                <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#shimMathNavbar" aria-controls="shimMathNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse" id="shimMathNavbar" style="">
                    <ul class="navbar-nav mr-auto">
                        @if (Model.MainBodyView == "Views/Shared/_Layout.cshtml")
                        {
                            <li class="nav-item active">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                        }
                        @if (Model.MainBodyView == "")
                        {
                            <li class="nav-item active">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Classes</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link disabled" asp-controller="Home" asp-action="Index">Classes</a>
                            </li>
                        }


                        @if (Model.MainBodyView == "Views/Shared/CodeSpace/_CodeSpaceLayout.cshtml")
                        {
                            <li class="nav-item active">
                                <a class="nav-link" asp-controller="CodeSpace" asp-action="Index">Code Space</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="CodeSpace" asp-action="Index">Code Space</a>
                            </li>
                        }
                    </ul>
                </div>
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link d-inline-flex pointer" data-toggle="modal" data-target="#registerModal">
                            <svg class="bi bi-person-fill text-light d-block m-auto" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                            </svg>
                            <p class="m-auto pl-2">Register</p>
                        </a>
                    </li>
                    <li class="nav-item login">
                        <a class="nav-link d-inline-flex pointer" data-toggle="modal" data-target="#loginModal">
                            <svg class="bi bi-box-arrow-in-right text-light m-auto" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M8.146 11.354a.5.5 0 010-.708L10.793 8 8.146 5.354a.5.5 0 11.708-.708l3 3a.5.5 0 010 .708l-3 3a.5.5 0 01-.708 0z" clip-rule="evenodd" />
                                <path fill-rule="evenodd" d="M1 8a.5.5 0 01.5-.5h9a.5.5 0 010 1h-9A.5.5 0 011 8z" clip-rule="evenodd" />
                                <path fill-rule="evenodd" d="M13.5 14.5A1.5 1.5 0 0015 13V3a1.5 1.5 0 00-1.5-1.5h-8A1.5 1.5 0 004 3v1.5a.5.5 0 001 0V3a.5.5 0 01.5-.5h8a.5.5 0 01.5.5v10a.5.5 0 01-.5.5h-8A.5.5 0 015 13v-1.5a.5.5 0 00-1 0V13a1.5 1.5 0 001.5 1.5h8z" clip-rule="evenodd" />
                            </svg>
                            <p class="m-auto pl-2">Login</p>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <!--</div>-->
        <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                <div class="modal-content bg-dark text-light">
                    <div class="d-flex">
                        <div class="login-background">

                        </div>
                        <div class="login-main">
                            <div class="mt-5 mb-5 ml-5 d-flex flex-column flex-grow-1">
                                <h1 class="modal-title flex-shrink-1 mb-1" id="exampleModalLongTitle">&#8747;himM&Delta;th</h1>

                                <form class="ml-3 d-flex flex-column justify-content-around flex-grow-1">
                                    <div class="form-group">
                                        <label>User Name or Email</label>
                                        <input id="usernameOrEmailSignIn" type="password" class="form-control" placeholder="User Name or Email">
                                    </div>
                                    <div class="form-group">
                                        <label>Password</label>
                                        <input id="passwordSignIn" type="password" class="form-control" placeholder="Password">
                                        <div class="d-flex login-subtext">
                                            <a href="#" class="text-secondary">Forgot username</a>
                                            <p class="ml-1 mr-1"> &#8891; </p>
                                            <a href="#" class="text-secondary">Forgot password</a>
                                        </div>

                                        <button id="signIn" type="submit" class="btn btn-primary">Login</button>

                                    </div>
                                    <div class="flex-grow-1">
                                    </div>
                                </form>
                                <div class="justify-content-end login-subtext d-flex flex-column align-items-start mb-3">
                                    New to ShimMath? &nbsp;<a data-dismiss="modal" aria-label="Close" class="text-secondary pointer" data-toggle="modal" data-target="#registerModal">SIGN UP</a>
                                </div>
                            </div>
                            <div class="modal-header border-0 flex-grow-1">
                                <button type="button" class="close text-light align-self-start" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                <div class="modal-content bg-dark text-light">
                    <div class="d-flex">
                        <div id="backButton" class="register-background d-flex justify-content-center align-items-center">
                            <svg class="bi bi-chevron-compact-left d-none" opacity="0.5" width="5em" height="5em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M9.224 1.553a.5.5 0 01.223.67L6.56 8l2.888 5.776a.5.5 0 11-.894.448l-3-6a.5.5 0 010-.448l3-6a.5.5 0 01.67-.223z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div id="registerEmail" class="register-main modal-body clearfix">
                            <div class="mt-5 mb-5 ml-5 d-flex flex-column flex-grow-1 justify-content-around">
                                <h1 class="modal-title flex-shrink-1 mb-1" id="exampleModalLongTitle">R&isin;gister@@&#8747;himM&Delta;th (Admin)</h1>

                                <div class="ml-3 mb-3 d-flex flex-column justify-content-around">
                                    <p style="width:400px;">With a ShimMath account you can compete and share in the Code Space community.</p>
                                    <div class="mb-0">
                                        <input id="emailInput" value="" type="text" class="form-control" placeholder="email@example.com">
                                    </div>
                                    <div class="justify-content-end text-danger login-subtext d-flex flex-column align-items-start">
                                        <p id="invalidEmailMessege" class="d-none mb-0">You need a valid email to continue!</p>
                                    </div>
                                    <div class="justify-content-end text-danger login-subtext d-flex flex-column align-items-start">
                                        <p id="alreadyUsedEmailMessege" class="d-none mb-0">An account is already associated with this email!</p>
                                    </div>
                                    <div class="mt-3">
                                        <a id="nextRegisterForm" class="btn btn-primary pointer">Next</a>
                                    </div>
                                    <div class="flex-grow-1">
                                    </div>
                                </div>
                                <div class="justify-content-end login-subtext d-flex flex-column align-items-start">
                                    Already a member of ShimMath? &nbsp;
                                    <a data-dismiss="modal" aria-label="Close" data-toggle="modal" data-target="#loginModal" class="text-secondary pointer">LOG IN</a>
                                </div>
                            </div>
                            <div class="email-regex-response d-flex flex-column m-4 justify-content-around">
                            </div>
                            <div class="modal-header border-0 flex-grow-1 mb-3">
                                <button type="button" class="close text-light align-self-start" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        </div>
                        <div id="registerUserNamePassword" class="register-main modal-body clearfix" style="height:auto">
                            <div class="mt-5 mb-5 ml-5 d-flex flex-column flex-grow-1">
                                <h1 class="modal-title flex-shrink-1 mb-1" id="exampleModalLongTitle">R&isin;gister@@&#8747;himM&Delta;th</h1>
                                <div class="d-inline-flex">
                                    <div class="ml-3 d-flex flex-column justify-content-around">
                                        <p style="width:400px;">Password must contain a number and special character.</p>
                                        <div class="form-group">
                                            <input id="username" type="text" class="form-control" placeholder="UserName">
                                            <div class="justify-content-end text-danger login-subtext d-flex flex-column align-items-start">
                                                <p id="invalidUsernameMessege" class="d-none mb-0">Invalid username</p>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label>Password</label>
                                            <input id="password" type="password" class="form-control" placeholder="Password">
                                        </div>
                                        <div class="justify-content-end text-danger login-subtext d-flex flex-column align-items-start">
                                            <p id="invalidPasswordMessege" class="d-none mb-0">Password Invalid!</p>
                                        </div>
                                        <div class="form-group">
                                            <input id="passwordConfirm" type="password" class="form-control" placeholder="Confirm Password">
                                            <div class="justify-content-end text-danger login-subtext d-flex flex-column align-items-start">
                                                <p id="invalidConfirmedPasswordMessege" class="d-none mb-0">Your retyped password doesn't match the origional.</p>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <button id="registerNewUser" type="submit" class="btn btn-primary mb-3">Register</button>
                                        </div>
                                        <div class="flex-grow-1">
                                        </div>
                                    </div>
                                    <div id="passwordRequirementsMessage" class="m-3 login-subtext d-none">
                                        <h6 id="requirementsMessage" class="text-danger">Password must contain the following:</h6>
                                        <p id="letter" class="text-danger m-0">A <b>lowercase</b> letter</p>
                                        <p id="capital" class="text-danger m-0">A <b>capital (uppercase)</b> letter</p>
                                        <p id="number" class="text-danger m-0">A <b>number</b></p>
                                        <p id="length" class="text-danger m-0">Minimum <b>8 characters</b></p>
                                    </div>
                                </div>
                            </div>

                            <div class="modal-header border-0 flex-grow-1">
                                <button type="button" class="close text-light align-self-start" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div style="margin-top: 20px"></div>
    <div class="container">


        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark">
        <div class="container">
            &copy; 2020 - ShimMathAdmin - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/node-forge/dist/forge.min.js"></script>
    <script type="text/javascript">
        var model = JSON.parse('@Html.Raw(Json.Serialize(Model))');
    </script>
    <script src="~/js/login.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
